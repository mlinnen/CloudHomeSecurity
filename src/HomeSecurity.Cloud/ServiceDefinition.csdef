<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="BrokerService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2013-10.2.2">
  <WebRole name="HomeSecurity.Web" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="MQTTBrokerIp" />
      <Setting name="MQTTClientId" />
    </ConfigurationSettings>
  </WebRole>
  <WorkerRole name="HomeSecurity.Worker" vmsize="ExtraSmall">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InputEndpoint name="WorkerIn" protocol="tcp" port="1883" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="LocalStorage1" cleanOnRoleRecycle="false" sizeInMB="10" />
    </LocalResources>
    <ConfigurationSettings>
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>